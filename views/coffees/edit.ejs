<%- include('../partials/header.ejs', {
    title: `${coffee.name} Edit Page`
}); %>

    <header>
        <h1><%= coffee.name %> Edit Page</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/coffees">Coffees</a></li>
            </ul>
        </nav>
    </header>
    <main>
    
    <form action="/coffees/<%= coffee._id %>?_method=PUT" method="POST">
        Name: <input type="text" name="name" value="<%= coffee.name %>"><br>
        Roast: <input type="text" name="roast" value="<%= coffee.roast %>"><br>
        Region: <input type="text" name="region" value="<%= coffee.region %>"><br>
        <button type="submit">Edit Coffee</button>
    </form>
    </main>

<%- include('../partials/footer.ejs'); %>